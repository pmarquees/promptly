generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  prompts       Prompt[]
  versions      PromptVersion[]
  abTests       ABTest[]
  apiKeys       ApiKey[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Prompt {
  id              String          @id @default(cuid())
  name            String
  description     String?
  content         String
  variables       String[]
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  createdBy       String
  isActive        Boolean         @default(true)
  triggerCount    Int             @default(0)
  currentVersionId String?
  tags            String[]
  user            User            @relation(fields: [createdBy], references: [id])
  versions        PromptVersion[]
  abTests         ABTest[]
}

model PromptVersion {
  id           String   @id @default(cuid())
  promptId     String
  name         String
  content      String
  variables    String[]
  createdAt    DateTime @default(now())
  createdBy    String
  isActive     Boolean  @default(false)
  triggerCount Int      @default(0)
  performance  Json?
  prompt       Prompt   @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [createdBy], references: [id])
  abTests      ABTestVersion[]
}

model ABTest {
  id          String          @id @default(cuid())
  name        String
  description String?
  promptId    String
  startDate   DateTime
  endDate     DateTime?
  isActive    Boolean         @default(true)
  metrics     String[]
  results     Json?
  createdBy   String
  prompt      Prompt          @relation(fields: [promptId], references: [id], onDelete: Cascade)
  user        User            @relation(fields: [createdBy], references: [id])
  versions    ABTestVersion[]
}

model ABTestVersion {
  id         String        @id @default(cuid())
  abTestId   String
  versionId  String
  weight     Float
  abTest     ABTest        @relation(fields: [abTestId], references: [id], onDelete: Cascade)
  version    PromptVersion @relation(fields: [versionId], references: [id])

  @@unique([abTestId, versionId])
}

model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  userId      String
  isActive    Boolean  @default(true)
  lastUsedAt  DateTime?
  createdAt   DateTime @default(now())
  expiresAt   DateTime?
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
